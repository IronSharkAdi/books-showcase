<div class="form-row">
    <div class="form-item">
        <div>
            <label >Title</label>
            <input required type="text" name="title" value="<%= book.title %>" >
        </div>
    </div>

    <div class="form-item">
        <div>
            <label >Writer</label>
            <select name="writer">
                <% writers.forEach(writer => { %>
                    <% if (writer.id === book.writer) { %>
                        <option selected value="<%= writer.id %>" label="<%= writer.name %>">
                    <% } else {%>
                        <option value="<%= writer.id %>" label="<%= writer.name %>">
                    <% } %> 
                <% }) %>
            </select>
        </div>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <div>
            <label >Publish Date</label>
            <input type="date" name="publishDate" required value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0]%>">
        </div>
    </div>
    <div class="form-item">
        <div>
            <label >Page Count</label>
            <input type="number" required name="pageCount" value="<%= book.pageCount%>">
        </div>
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <div>
            <label >Cover</label>
            <input type="file" class="book-cover filepond" required name="cover">
        </div>
    </div>
    <div class="form-item">
        <div>
            <label >Description</label>
            <textarea name="description"></textarea>
        </div>
    </div>
</div>

