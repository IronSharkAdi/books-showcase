<h2 class="page-header">Search Books </B></h2>

<form action="/books" method="GET">
<div class="form-row">
    <div class="form-item">
        <label>Title</label> <br>
        <input type="text" name="title" value="<%= searchOptions.title %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Publish After</label> <br>
        <input type="date" name="publishAfter" value="<%= searchOptions.publishAfter %>">
    </div>
    <div class="form-item">
        <label>Publish Before</label> <br>
        <input type="date" name="publishBefore" value="<%= searchOptions.publishBefore %>">
    </div>
</div>
<div class="form-row form-row-end">
<button class="cus-btn cus-btn-1" type="submit">search</button>
</div>
</form>


<% books.forEach(book => { %>
    <a href="/books/<%= book.id %> "> <img src="<%= book.coverImagePath  %>" width="100" height="150"> </a>
 <% }) %>